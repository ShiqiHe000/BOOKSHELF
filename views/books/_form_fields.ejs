<!-- title -->
<div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" />
</div>

<!-- author -->
<div>
    <label for="author">Author</label>
    <select name="author" id="author">
        <% authors.forEach( author => { %> 
            <% if(`${author._id}` === `${book.author}`) { %>
                <option selected value="<%= author._id %>"><%= author.name %></option>
            <% } else { %>
                <option value="<%= author._id %>"><%= author.name %></option>
            <% } %> 
        <% }) %>
    </select>
</div>

<!-- publish Date -->
<div>
    <label for="publishedDate">Published Date</label>
    <input
        type="date"
        id="publishedDate"
        name="publishedDate"
        value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>"
    />
</div>

<!-- page count -->
<div>
    <label for="pageCount">Page Count</label>
    <input
        type="number"
        id="pageCount"
        name="pageCount"
        value="<%= book.pageCount %>"
        min="1"
    />
</div>

<!-- cover image -->
<div>
    <label for="coverImage">Cover</label>
    <input type="file" id="coverImage" name="coverImage" class="filepond" />
</div>

<!-- description -->
<div>
    <label for="description">Description</label>
    <textarea name="description" id="description">
        <%= book.description %> 
    </textarea>
</div>
