<!-- title -->
<div class="card-item">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" />
</div>

<!-- author -->
<div class="card-item">
    <label for="author">Author:</label>
    <select name="author" id="author">
        <% authors.forEach( author => { %> <% if(`${author._id}` ===
        `${book.author}`) { %>
        <option selected value="<%= author._id %>"><%= author.name %></option>
        <% } else { %>
        <option value="<%= author._id %>"><%= author.name %></option>
        <% } %> <% }) %>
    </select>
</div>

<!-- publish Date -->
<div class="card-item">
    <label for="publishedDate">Published Date:</label>
    <input
        type="date"
        id="publishedDate"
        name="publishedDate"
        value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>"
    />
</div>

<!-- page count -->
<div class="card-item">
    <label for="pageCount">Page Count:</label>
    <input
        type="number"
        id="pageCount"
        name="pageCount"
        value="<%= book.pageCount %>"
        min="1"
    />
</div>

<div class="cover-and-desc-container">
    <!-- cover image -->
    <div class="card-item vertical-display cover-drop">
        <label for="coverImage">Cover:</label>
        <input type="file" id="coverImage" name="coverImage" class="filepond" />
    </div>

    <!-- description -->
    <div class="card-item vertical-display">
        <label for="description">Description:</label>
        <textarea name="description" id="description">
            <%= book.description %> 
        </textarea>
    </div>
</div>
