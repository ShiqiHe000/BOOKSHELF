<h2>Edit Book</h2>
<form
    action="/books/<%= book._id %>?_method=PUT"
    method="POST"
    class="card card-bg"
>
    <%- include('./_form_fields.ejs') %>
    <div class="btn-horizontal-group">
        <a href="/books/<%= book._id %>" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
