<h1>Search Book</h1>
<form action="/books" method="GET">
    <div>
        <label for="title">Title: </label>
        <input
            type="text"
            id="title"
            name="title"
            value="<%= searchOptions.title %> "
        />
    </div>
    <div>
        <label for="title">Published After: </label>
        <input
            type="date"
            id="publishedAfter"
            name="publishedAfter"
            value="<%= searchOptions.publishedAfter %> "
        />
    </div>
    <div>
        <label for="title">Published Before: </label>
        <input
            type="date"
            id="publishedBefore"
            name="publishedBefore"
            value="<%= searchOptions.publishedBefore %> "
        />
    </div>
    <button type="submit">Search</button>
</form>
<div>
    <% books.forEach(book => { %>
    <div><%= book.title %></div>
    <a href="/books/<%= book._id %> ">
        <img
            src="<%= book.coverImagePath %>"
            alt="Book Cover"
            height="150"
            width="100"
        />
    </a>
    <% }) %>
</div>
