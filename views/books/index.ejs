<h1>Search Book</h1>
<div class="books-page-grid">
    <form action="/books" method="GET" class="card card-bg">
        <div class="card-item">
            <label for="title">Title: </label>
            <input
                type="text"
                id="title"
                name="title"
                value="<%= searchOptions.title %> "
            />
        </div>
        <div class="card-item">
            <label for="title">Published After: </label>
            <input
                type="date"
                id="publishedAfter"
                name="publishedAfter"
                value="<%= searchOptions.publishedAfter %> "
            />
        </div>
        <div class="card-item">
            <label for="title">Published Before: </label>
            <input
                type="date"
                id="publishedBefore"
                name="publishedBefore"
                value="<%= searchOptions.publishedBefore %> "
            />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <div class="book-display card card-bg">
        <h3 class="book-recommendation-title">Recommendations</h3>
        <% books.forEach(book => { %>
        <div>
            <h6 class="book-display-title"><%= book.title %></h6>
            <a href="/books/<%= book._id %> ">
                <img
                    src="<%= book.coverImagePath %>"
                    alt="Book Cover"
                    class="book-display-cover"
                />
            </a>
        </div>
        <% }) %>
    </div>
</div>
