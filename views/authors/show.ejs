<h2><%= author.name %></h2>
<a href="/authors/<%= author._id %>/edit">Edit</a>
<%- include('../partials/deleteForm.ejs', {url}) %> 

<h2>Book By Author</h2>
<div>
    <% books.forEach( book => { %>
        <a href="/books/<%= book._id %>">

            <img
            src="<%= book.coverImagePath %> "
            alt="author's books"
            height="150"
            width="100"
            />
        </a>
        <div><%= book.title %></div>
    <% }) %>
</div>
