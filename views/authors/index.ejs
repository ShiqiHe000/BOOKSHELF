<h1>Search Author</h1>
<form action="/authors" method="GET">
    <div>
        <label for="name">Name: </label>
        <input
            type="text"
            id="name"
            name="name"
            value="<%= searchOptions.name %> "
        />
    </div>
    <button type="submit">Search</button>
</form>

<% authors.forEach(author => { %>
<div>
    <%= author.name %>
    <a href="/authors/<%= author._id %> ">View</a>
    <a href="/authors/<%= author._id %>/edit ">Edit</a>
    <%- include('../partials/deleteForm.ejs', { url: `/authors/${author._id}` }) %>
</div>
<% }) %>
